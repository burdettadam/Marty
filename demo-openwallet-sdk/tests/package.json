{
  "name": "openwallet-demo-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for OpenWallet Foundation mDoc/mDL Demo",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:basic": "playwright test tests/e2e/basic-demo.spec.js",
    "test:enhanced": "playwright test tests/e2e/enhanced-features.spec.js",
    "test:integration": "playwright test tests/e2e/integration.spec.js",
    "test:ci": "playwright test --reporter=junit",
    "install:browsers": "playwright install",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}