# Marty Platform Demo Environment Configuration
# Copy this file to .env.demo in the root directory

# === Database Configuration ===
POSTGRES_USER=martyuser
POSTGRES_PASSWORD=martypassword
POSTGRES_DB=martydb
POSTGRES_PORT=5432

# === Object Storage (MinIO) ===
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# === Key Vault (HashiCorp Vault Dev Mode) ===
VAULT_ROOT_TOKEN=demo-root-token
VAULT_PORT=8200

# === PKD Service ===
PKD_API_KEY=demo_secure_api_key_change_in_production
PKD_SECRET_KEY=demo_secure_secret_key_for_jwt_change_in_production

# === Monitoring & Observability ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
JAEGER_PORT=16686

# === Demo UI Configuration ===
UI_DEMO_MODE=true
UI_ADMIN_USERNAME=demo
UI_ADMIN_PASSWORD=demo123

# === Demo Data Settings ===
DEMO_GENERATE_SAMPLE_PASSPORTS=true
DEMO_GENERATE_SAMPLE_MDLS=true
DEMO_GENERATE_SAMPLE_MDOCS=true
DEMO_SAMPLE_COUNT=10

# === OTEL Configuration ===
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_RESOURCE_ATTRIBUTES=service.name=marty-demo,deployment.environment=demo

# === Debug Settings ===
DEBUG_MODE=true
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true

# === Demo-specific Features ===
ENABLE_MOCK_DATA=true
DEMO_AUTO_APPROVE_CREDENTIALS=true
DEMO_SKIP_REAL_PKD_SYNC=true
DEMO_USE_SELF_SIGNED_CERTS=true

# === Network Configuration ===
DOCKER_NETWORK_NAME=marty-demo-network

# === Service Ports (for external access) ===
TRUST_SVC_HTTP_PORT=8090
TRUST_SVC_GRPC_PORT=9090
TRUST_SVC_METRICS_PORT=8091
TRUST_ANCHOR_PORT=9080
CSCA_SERVICE_PORT=8081
DOCUMENT_SIGNER_PORT=8082
INSPECTION_SYSTEM_PORT=8083
PASSPORT_ENGINE_PORT=8084
MDL_ENGINE_PORT=8085
MDOC_ENGINE_PORT=8086
DTC_ENGINE_PORT=8087
PKD_SERVICE_PORT=8088
CREDENTIAL_LEDGER_PORT=8089
ISSUER_API_PORT=8092
UI_APP_PORT=8093
SERVICE_REGISTRY_PORT=8099

# === Demo Timing ===
DEMO_STARTUP_WAIT_SECONDS=30
DEMO_HEALTH_CHECK_INTERVAL=10
DEMO_SEED_DATA_DELAY=45

# === External URLs (for demo - not real endpoints) ===
DEMO_PKD_URL=https://demo.pkd.marty.local
DEMO_ICAO_PKD_URL=https://demo.icao.marty.local

# === Demo Certificates (self-signed for demo) ===
DEMO_ROOT_CA_PATH=/app/data/demo-certs/root-ca.pem
DEMO_CSCA_CERT_PATH=/app/data/demo-certs/csca.pem
DEMO_DS_CERT_PATH=/app/data/demo-certs/document-signer.pem

# === Demo Authentication (insecure for demo only) ===
DEMO_JWT_SECRET=demo_jwt_secret_change_in_production
DEMO_API_KEY=demo_api_key_change_in_production
DEMO_BASIC_AUTH_USER=demo
DEMO_BASIC_AUTH_PASS=demo123

# === Resource Limits (for demo - adjust based on your system) ===
POSTGRES_MAX_CONNECTIONS=100
MINIO_CONSOLE_SECURE_TLS_REDIRECT=off
JAEGER_STORAGE_TYPE=memory
PROMETHEUS_RETENTION_TIME=24h

# === Demo Flags ===
SKIP_TLS_VERIFICATION=true
ALLOW_INSECURE_CONNECTIONS=true
ENABLE_DEVELOPMENT_FEATURES=true
DISABLE_RATE_LIMITING=true
ENABLE_DETAILED_LOGGING=true