{
  "expiry_thresholds": [90, 60, 30, 15, 7, 3, 1],
  "check_interval": 24,
  "notification_channels": ["log", "email"],
  "log_level": "INFO",
  "track_revocations": true,
  "track_renewals": true,
  "track_failures": true,
  "email_config": {
    "smtp_server": "smtp.example.com",
    "smtp_port": 587,
    "use_tls": true,
    "username": "${SMTP_USERNAME}",
    "password": "${SMTP_PASSWORD}",
    "from_address": "certificates@example.com",
    "to_addresses": ["admin@example.com", "security@example.com"],
    "subject_prefix": "[CERT ALERT]"
  },
  "rotation_policy": {
    "standard_cert_validity_days": 1095,
    "root_ca_validity_days": 3650,
    "key_algorithm": "RSA",
    "key_size": 2048,
    "auto_renew_days_before": 90,
    "overlap_period_days": 30
  }
}
