{
  "id": "passport_verification",
  "name": "Passport Document Verification", 
  "purpose": "Verify passport document authenticity and extract travel document information",
  "input_descriptors": [
    {
      "id": "passport_credential",
      "name": "Passport Credential",
      "purpose": "Travel document verification",
      "constraints": {
        "fields": [
          {
            "path": ["$.vc.credentialSubject.document_type", "$.document_type"],
            "purpose": "Document type verification",
            "filter": {
              "type": "string",
              "enum": ["passport", "national_id", "driver_license"]
            }
          },
          {
            "path": ["$.vc.credentialSubject.document_number", "$.document_number"],
            "purpose": "Document number",
            "filter": {
              "type": "string"
            }
          },
          {
            "path": ["$.vc.credentialSubject.issuing_country", "$.issuing_country"],
            "purpose": "Issuing country verification",
            "filter": {
              "type": "string",
              "pattern": "^[A-Z]{2,3}$"
            }
          },
          {
            "path": ["$.vc.credentialSubject.given_name", "$.given_name"],
            "purpose": "Given name on document",
            "filter": {
              "type": "string"
            }
          },
          {
            "path": ["$.vc.credentialSubject.family_name", "$.family_name"],
            "purpose": "Family name on document",
            "filter": {
              "type": "string"
            }
          },
          {
            "path": ["$.vc.credentialSubject.nationality", "$.nationality"],
            "purpose": "Nationality verification",
            "filter": {
              "type": "string",
              "pattern": "^[A-Z]{2,3}$"
            }
          },
          {
            "path": ["$.vc.credentialSubject.date_of_birth", "$.date_of_birth"],
            "purpose": "Date of birth on document",
            "filter": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            }
          },
          {
            "path": ["$.vc.credentialSubject.place_of_birth", "$.place_of_birth"],
            "purpose": "Place of birth",
            "optional": true,
            "filter": {
              "type": "string"
            }
          },
          {
            "path": ["$.vc.credentialSubject.sex", "$.sex"],
            "purpose": "Sex designation",
            "optional": true,
            "filter": {
              "type": "string",
              "enum": ["M", "F", "X"]
            }
          }
        ]
      }
    }
  ]
}