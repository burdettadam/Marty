{
  "id": "age_verification",
  "name": "Age Verification",
  "purpose": "Verify user is over 18 years old",
  "input_descriptors": [
    {
      "id": "age_credential",
      "name": "Age Verification Credential",
      "purpose": "Verify minimum age requirement",
      "constraints": {
        "fields": [
          {
            "path": ["$.vc.credentialSubject.over_18", "$.over_18"],
            "purpose": "Over 18 verification",
            "filter": {
              "type": "boolean",
              "const": true
            }
          },
          {
            "path": ["$.vc.credentialSubject.birthdate", "$.birthdate"],
            "purpose": "Date of birth for age calculation",
            "optional": true,
            "filter": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            }
          }
        ]
      }
    }
  ]
}
