{
  "dashboard": {
    "title": "Marty Platform Overview",
    "tags": ["marty", "microservices", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"csca-service|document-signer|dtc-engine|inspection-system|mdl-engine|mdoc-engine|passport-engine|pkd-service|trust-anchor|ui-app\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Active Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Request Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{job}} - {{method}} {{status}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "reqps",
            "label": "Requests per second"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Error Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "{{job}} error rate",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "percent",
            "label": "Error Rate (%)"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "95th Percentile Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{job}} p95 latency",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "s",
            "label": "Latency (seconds)"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Dead Letter Queue Size",
        "type": "graph",
        "targets": [
          {
            "expr": "marty_dead_letter_queue_size",
            "legendFormat": "{{service}} DLQ size",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "short",
            "label": "Messages"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Event Processing Queue Size",
        "type": "graph",
        "targets": [
          {
            "expr": "marty_event_processing_queue_size",
            "legendFormat": "{{service}} queue size",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "short",
            "label": "Pending Events"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Database Connection Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "marty_database_connections_active / marty_database_connections_max * 100",
            "legendFormat": "{{service}} DB connections",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "percent",
            "label": "Connection Usage (%)"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\".*marty.*\"}[5m])",
            "legendFormat": "{{pod}} CPU usage",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "cores",
            "label": "CPU Cores"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\".*marty.*\"} / container_spec_memory_limit_bytes * 100",
            "legendFormat": "{{pod}} memory usage",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "percent",
            "label": "Memory Usage (%)"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 40
        }
      },
      {
        "id": 11,
        "title": "Disk Usage by Node",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - node_filesystem_avail_bytes / node_filesystem_size_bytes) * 100",
            "legendFormat": "{{kubernetes_node_name}} disk usage",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "format": "percent",
            "label": "Disk Usage (%)"
          },
          {
            "format": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 40
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}